<h3>School Class Form:</h3>

<%= form_tag school_classes_path do %>
  <label for="Class Title">Class Title:</label><br>
  <%= text_field_tag :'school_class[title]' %><br>

  <label for="Room Number">Room Number:</label><br>
  <%= number_field_tag :'school_class[room_number]' %><br>

  <%= submit_tag "Create School class" %>

<% end %>
